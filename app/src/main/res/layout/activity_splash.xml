<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jr.practice.splash.SplashActivity">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="193dp"
        android:layout_height="170dp"
        android:id="@+id/progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/activity_splash"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_splash"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_splash"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_splash"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
