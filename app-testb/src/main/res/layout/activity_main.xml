<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jr.glidestudy.MainActivity">

    <Button
        android:id="@+id/btn_load_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadGif"
        android:text="加载一个gif" />

    <Button
        android:id="@+id/btn_load_gif_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_load_gif"
        android:onClick="loadGifWithProgress"
        android:text="加载一个带进度的gif" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_load_gif_progress"
        android:onClick="loadCircle"
        android:text="加载一个圆形图片" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:background="#c5797979" />

</RelativeLayout>
